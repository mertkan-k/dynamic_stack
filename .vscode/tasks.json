{
	// See https://go.microsoft.com/fwlink/?LinkId=733558 
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "gcc.exe build active file",
			"command": "D:\\MinGW\\bin\\gcc.exe",
			"args": [
				"-g",
				"${fileDirname}\\*.c",
				"-o",
				"${fileDirname}\\main.exe"
			],
			"options": {
				"cwd": "D:\\MinGW\\bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}